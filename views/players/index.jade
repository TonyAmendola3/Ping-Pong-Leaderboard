extends ../layout

block content
	h1.
		#{title}
	ul
		- each player, i in players
			li
				= winner.username
				form(action='/players/#{player._id}/edit', method='post', enctype='application/x-www-form-urlencoded')
					input(type='hidden',value='DELETE',name='_method')
					button(type='submit').
						Delete
				p
					a(href='/players/#{player._id}/edit') Edit
				p
					a(href='/players/#{player._id}') Show

	p
		a(href='/players/new') Add new